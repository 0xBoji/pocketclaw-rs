<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PocketClaw"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketClaw">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SetupActivity"
            android:exported="false" />
        <activity
            android:name=".SetupWizardActivity"
            android:exported="false" />
        <activity
            android:name=".wave.ControllerDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".wave.WorkspaceCreatorActivity"
            android:exported="false" />
        <activity
            android:name=".wave.ProviderSecretsActivity"
            android:exported="false" />
        <activity
            android:name=".wave.ChannelChatSetupActivity"
            android:exported="false" />
        <activity
            android:name=".wave.SkillsPermissionsActivity"
            android:exported="false" />
        <activity
            android:name=".wave.ResourceMonitorActivity"
            android:exported="false" />
        <activity
            android:name=".wave.SessionLiveActivity"
            android:exported="false" />
        <activity
            android:name=".wave.SafetySandboxActivity"
            android:exported="false" />

        <service
            android:name=".PocketClawService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name=".PocketClawAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:label="@string/accessibility_service_label"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>
